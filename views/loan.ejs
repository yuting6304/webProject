<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Loan</title>
    <link rel="stylesheet" href="/css/header.css" type="text/css" />
    <link rel="stylesheet" href="/css/loan.css" type="text/css" />
    <script type="text/javascript" src="/js/loan.js"></script>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>

<script>

    $(document).ready(function(){
        let money, rate, period, credit, reason;
        let mail, password;
        

        $("#send").click(function(){
            money=$("#money").val();
            rate=$("#rate").val();
            period=$("#period").val();
            credit=$("#credit").val();
            reason=$("#reason").val();
            
            password=$("#password").val();
            mail=$("#mail").val();

            $.post("http://localhost:8080/loan",{money: money, rate: rate, period: period, credit: credit, reason: reason, password: password, mail: mail}, function(data){
                console.log(data);
            });
        });
    });

</script>
<body>
    <header class="nav">
        <ul>
            <li><a class="active" href="/">Home</a></li>
            <li><a href="#news">News</a></li>
            <li><a href="#contact">Contact</a></li>
            <li><a href="/intro">About</a></li>
            <% if(title == "Sign in") { %>
                <li class="nav_signin"><a href="/login"><%= title%></a></li>
            <% } else { %>
                <li class="nav_signin"><a href="/logout"><%= title%></a></li>
            <% } %>

            <% if(account == "Sign up") { %>
                <li class="nav_signin"><a href="/register"><%= account%></a></li>
            <% } else { %>
                <li class="nav_signin"><a href="/member"><%= account%></a></li>
            <% } %>
        </ul>      
    </header>

    <main class="main">
        <article class = "main_titles titles">
            <h3 class= "titles_tile">Join P2P Borrowing Platform</h3>
            <h4 class= "titles_subtitle">Loan</h4>
        </article>
        <div class="step">
            <div id="step1" class="step1">
                step1 : <br/>Fill in your demand
            </div>
            <div id="step2" class="step2">
               step2 : <br/>Fill in your mail and password to confirm
            </div>
        </div>
        
        
        <form id="form" onsubmit="checkInfo()" method="GET" role="form" action="/" >

            <div id="checkInput">
           
            </div>

            <div id="form1">
                金額 <span>*</span> <br/>
                <input id="money" type="text" pattern="[^a-zA-Z0]*" required/>
                    <span class="ok">ok</span><br/>
                年利率 <span>*</span><br/>
                    <input id="rate" type="text" placeholder="1%~12%" pattern="[1-12]" required />
                    <span class="ok">ok</span><br/>
                期數(每月一期) <span>*</span><br/>
                    <input id="period" type="text" pattern="[^a-zA-Z0]*" required />
                    <span class="ok">ok</span><br/>
                信用卡號<span>*</span><br/>
                <input id="credit" type="text" placeholder="fill in ten '0'" required pattern="[0]{10,10}"/>
                <span class="ok">ok</span><br/>
                借錢理由 <br/>
                <textarea id="reason" type="text" rows="10" cols="50" ></textarea><br />
                <input id="nx" type="button" value="Next" onclick="getInfo1()"/>
            </div>

            <div id="form2">
                E-mail<span>*</span> <br/>
                <input id="mail" name="mail" type="email" placeholder="Your email" required>
                <span class="ok">ok</span><br/>
                密碼<span>*</span><br/>
                <input id="password" type="password" required>
                <span class="ok">ok</span><br/><br/>

                <input id="send" type="submit" value="Send" onclick="getInfo2()">
            </div>
            
        
        </form>

    </main>
</body>
</html>