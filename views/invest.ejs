<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/user.css">
    <link rel="stylesheet" href="/css/user_lb.css ">
    <link rel="stylesheet" href="/css/header.css">
    <script type="text/javascript" src="/js/invest.js"></script>
    <!-- <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script> -->
    <title>Investigation</title>
</head>
<body>

    <header class="nav">
        <ul>
            <li><a class="active" href="/">Home</a></li>
            <li><a href="#news">News</a></li>
            <li><a href="#contact">Contact</a></li>
            <li><a href="/intro">About</a></li>

            <!-- <div class="login">  -->

            <% if(title == "Sign in") { %>
                <li class="nav_signin"><a href="/login"><%= title%></a></li>
            <% } else { %>
                <li class="nav_signin"><a href="/logout"><%= title%></a></li>
            <% } %>
                
            <% if(account == "Sign up") { %>
                <li class="nav_signin"><a href="/register"><%= account%></a></li>
            <% } else { %>
                <li class="nav_signin"><a href="/member"><%= account%></a></li>
            <% } %>
        </ul>    
    </header>

    <main class="user">
        <section class="user_data">
            <table class = "datas" id="table">
                <tr>
                    <th>編號</th>
                    <th>使用者</th>
                    <th>欲貸金額</th>
                    <th>利率</th>
                    <th>期數</th>
                    <th>貸款原因</th>
                    <th>貸款方式</th>
                    <th>狀態</th>
                    <th>投資</th>
                </tr>
                <% for(let i = 0; i < data.length; i++) { %>
                    <tr class = "datas_data" id="table_data">
                        <td><%= i+1 %></td>
                        <td><%= data[i].username %></td>
                        <td>$ <%= data[i].money %></td>
                        <td><%= data[i].rate %> % </td>
                        <td><%= data[i].period %> 期 </td>
                        <td><%= data[i].loan_reason %></td>
                        <td><%= data[i].loan_type %></td>
                        <td><%= data[i].status %></td>
                        <td><button id="click" onclick="getValue(this)">click</button></td>
                    </tr>
                <% } %>
            </table>
        </section>


    </main>

</body>
</html>