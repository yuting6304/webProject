<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/user.css">
    <link rel="stylesheet" href="/css/user_lb.css ">
    <link rel="stylesheet" href="/css/header.css">
    <title>My Loan Data</title>
</head>

<body>

    <header class="nav">
        <ul>
            <li><a class="active" href="/">Home</a></li>
            <li><a href="#news">News</a></li>
            <li><a href="#contact">Contact</a></li>
            <li><a href="/intro">About</a></li>

            <!-- <div class="login">  -->

            <% if(title == "Sign in") { %>
                <li class="nav_signin"><a href="/login"><%= title%></a></li>
            <% } else { %>
                <li class="nav_signin"><a href="/logout"><%= title%></a></li>
            <% } %>
                
            <% if(account == "Sign up") { %>
                <li class="nav_signin"><a href="/register"><%= account%></a></li>
            <% } else { %>
                <li class="nav_signin"><a href="/member"><%= account%></a></li>
            <% } %>
        </ul>    
    </header>

    <main class="user">
        <div class="user_sidenav sidenav">
            <a class="sidenav_block" href="/member">個人資料</a>
            <a class="sidenav_block" href="/member/myLoan">我的貸款</a>
            <a class="sidenav_block" href="/member/myInvest">我的投資</a>
        </div>
        <section class="user_data">
            <table class = "datas">
                <tr>
                    <th>編號</th>
                    <th>利率</th>
                    <th>期數</th>
                    <th>欲貸金額</th>
                    <th>貸款原因</th>
                    <th>貸款方式</th>
                    <th>狀態</th>
                </tr>
                <% for(let i = 0; i < data[0].length; i++) { %>
                    <tr class = "datas_data">
                        <% for(let j = 0; j < 7; j++) { %>
                            <% if(j == 1) { %>
                                <td><%= data[j][i] %> % </td>
                            <% } else if(j == 3) { %>
                                <td>$ <%= data[j][i] %></td>
                            <% } else if(j == 6) { %>
                                <% if(data[j][i] == 1) { %>
                                    <td> 等待中 </td>
                                <% } else { %>
                                    <td> 已結束 </td>
                                <% } %>
                            <% } else { %>
                                <td><%= data[j][i] %></td>
                            <% } %>
                        <% } %>
                    </tr>
                <% } %>
            </table>
        </section>


    </main>

</body>
</html>